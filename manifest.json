{
  "manifest_version": 3,
  "name": "YouTube Comment Scraper",
  "version": "1.0",
  "description": "A simple Chrome extension to scrape YouTube comments",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "Youtube_Logo.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}

